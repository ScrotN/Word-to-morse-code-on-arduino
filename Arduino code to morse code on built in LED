//Since I make this for an arduino nano. This might be different for you.
//After you've uploaded the code onto your arduino nano board, connect pin 13(D10) to ground(GND), pin 2(RX0) to ground(GND), pin 2(RX0) to a button to 5v.

const int A = 2;
const int B = 13;
int buttonState = 0;
void setup() {
  pinMode(B, OUTPUT);
  pinMode(LED_BUILTIN, HIGH);
  pinMode(A, INPUT);
}

void loop() {
